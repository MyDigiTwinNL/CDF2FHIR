    "version": "0.2.0",
    "configurations": [
        
        {
            "name": "Debug Jest Tests",
            "type": "node",
            "request": "launch",
            "runtimeArgs": ["--inspect-brk", "${workspaceRoot}/node_modules/.bin/jest", "--runInBand", "--coverage", "false"],
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen"
        },

        {
            "name": "Debug Transform CLI",
            "type": "node",
            "request": "launch",
            "program": "${workspaceFolder}/src/transform.ts",
            "preLaunchTask": "tsc: build - tsconfig.json",
            "args": [
                "samples/sample_mapping_config_.json1",
                "fhirvalidation/sampleinputs/",
                "-o",
                "/tmp"
            ],
            "cwd": "${workspaceFolder}",
            "console": "integratedTerminal",
            }

    ]
}